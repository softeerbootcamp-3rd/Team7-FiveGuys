<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.softeer.robocar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".di.RoboCarApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoboCar"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".ui.activity.MapActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.kakao.vectormap.APP_KEY"
            android:value="${kakao_native_app_key}" />
        <meta-data
                android:name="com.naver.maps.map.CLIENT_ID"
                android:value="${naver_map_client_id}" />
        <meta-data
                android:name="com.naver.maps.map.CLIENT_SECRET"
                android:value="${naver_map_client_secret}"/>
        <activity
            android:name=".ui.activity.LoadingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.HomeActivity"
            android:exported="true"> 
        </activity>

        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="true" >
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name=".ui.activity.RequestCarPoolActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.RegisterActivity"
            android:exported="false"/>

    </application>
</manifest>